NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGINS=http://localhost:3000

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=secret
DB_NAME=music_app

# Authentication
JWT_SECRET=super-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=super-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_JSON=

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Embedding service
EMBEDDING_SERVICE_URL=http://localhost:8000/embeddings

# File uploads
STORAGE_DRIVER=local
STORAGE_CDN_BASE_URL=
LOCAL_UPLOAD_DIR=./uploads
LOCAL_UPLOAD_BASE_URL=/uploads

# AWS S3 (optional)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_SIGNED_URL_EXPIRES=900

# Google Cloud Storage (optional)
GCS_BUCKET=
GCS_PROJECT_ID=
GCS_KEY_FILE=
GCS_SIGNED_URL_EXPIRES=900
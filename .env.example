NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGINS=http://localhost:3000

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=secret
DB_NAME=music_app

# Authentication
JWT_SECRET=super-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=super-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_JSON=

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Embedding service
EMBEDDING_SERVICE_URL=http://localhost:8000/embeddings

# File uploads
STORAGE_DRIVER=gcs
STORAGE_CDN_BASE_URL=
LOCAL_UPLOAD_DIR=./uploads
LOCAL_UPLOAD_BASE_URL=/uploads

# AWS S3 (optional)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_SIGNED_URL_EXPIRES=900

# Google Cloud Storage (optional)
GCS_BUCKET=khoaluantotnghiep-bc862.firebasestorage.app
GCS_PROJECT_ID=khoaluantotnghiep-bc862
GCS_KEY_FILE=./firebase-service-account.json
GCS_SIGNED_URL_EXPIRES=900

# Email verification
# EMAIL_TRANSPORT can be: smtp | log
# If EMAIL_TRANSPORT is empty and SMTP_HOST is set, backend will auto use SMTP.
EMAIL_TRANSPORT=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM=Music App <no-reply@musicapp.com>
FRONTEND_URL=http://localhost:5173
EMAIL_VERIFY_EXPIRES_MINUTES=30
